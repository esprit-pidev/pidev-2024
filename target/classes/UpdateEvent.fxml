<AnchorPane prefHeight="400.0" prefWidth="600.0"  xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.EventControllers.UpdateEventController">
    <children>
        <HBox alignment="CENTER" layoutX="75.0" prefHeight="746.0" prefWidth="1151.0" spacing="50.0">
            <children>
                <VBox fx:id="updateContainer" alignment="CENTER" spacing="50.0">
                    <children>
                        <VBox alignment="TOP_RIGHT" minWidth="500.0" spacing="50.0">
                            <children>
                                <TextField fx:id="name" prefHeight="26.0" prefWidth="200.0" />
                                <TextArea fx:id="description" prefHeight="95.0" prefWidth="200.0" />
                                <DatePicker fx:id="datePicker" prefHeight="26.0" prefWidth="200.0" />
                                <Button fx:id="uploadImg" mnemonicParsing="false" onAction="#uploadImg" text="upload" />
                            </children>
                        </VBox>
                        <Button fx:id="updateEvent" mnemonicParsing="false" text="Update Event" />
                    </children>
                </VBox>
            </children>
         <padding>
            <Insets bottom="30.0" top="30.0" />
         </padding>
        </HBox>
      <Button fx:id="back" layoutX="22.0" layoutY="34.0" mnemonicParsing="false" prefHeight="26.0" prefWidth="46.0" text="Back" />
    </children>

</AnchorPane>
